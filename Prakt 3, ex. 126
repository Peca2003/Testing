#include <iostream>
#include <iomanip>
#include <Windows.h>
using namespace std;

int main()
{
	SetConsoleCP(1251);
	SetConsoleOutputCP(1251);

	const int M = 3;
	const int K = 4;
	int a[M][K] = {
		{ 16, 3, 9, 15 },
		{ 11, 5, 21, 0 },
		{ 23, 4, 61, 12}
	};
	cout << "Матрица имеет вид: " << endl;
	for (int i = 0; i < M; i++)
	{
		for (int j = 0; j < K; j++)
		{
			cout << setw(2) << a[i][j] << " ";
		}
		cout << endl;
	}
	cout << "Сумма элементов каждого столбца: " << endl;
	int sum = 0;
	for (int j = 0; j < K; j++)
	{
		for (int i = 0; i < M; i++)
		{
			sum += a[i][j];
		}
		cout << "\t - столбец " << j + 1 << ": " << sum << endl;
	}
	int max_sum = 0, col = 0;
	for (int j = 0; j < K; j++)
	{
		for (int i = 0; i < M; i++)
		{
			sum += a[i][j];
		}
		if (sum > max_sum)
		{
			max_sum = sum;
			col = j + 1;
		}
	}
	cout << "Столбец с максимальной суммой элементов: " << col << endl;
	system("pause");
	return 0;
}
