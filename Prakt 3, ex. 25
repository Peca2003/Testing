#include <iostream>
#include <Windows.h>
#include <time.h>
using namespace std;

int main()
{
	SetConsoleCP(1251);
	SetConsoleOutputCP(1251);

	const int n = 4, m = 5;
	int a[n][m]{};

	srand(time(0));
	for (int i = 0; i < n; i++)
	{
		for (int j = 0; j < m; j++)
		{
			a[i][j] = 10 + rand() % 41;
		}
	}
	cout << "Прямоугольная матрицы имеет вид: " << endl;
	for (int i = 0; i < n; i++)
	{
		cout << "| ";
		for (int j = 0; j < m; j++)
		{
			cout << a[i][j] << " ";
		}
		cout << "|" << endl;
	}
	cout << endl;
	cout << "Номера максимальных элементов в каждой строке: " << endl;
	int maxI = 0, maxJ = 0;
	for (int i = 0; i < n; i++)
	{
		int max = a[i][0];
		for (int j = 1; j < m; j++)
		{
			if (a[i][j] > max)
			{
				max = a[i][j];
				maxJ = j;
			}
		}
		cout << maxJ << " ";
	}
	cout << endl;
	system("pause");
	return 0;
}
