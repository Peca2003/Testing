#include <iostream>
#include <iomanip>
#include <Windows.h>
using namespace std;

int main()
{
	SetConsoleCP(1251);
	SetConsoleOutputCP(1251);

	const int M = 3;
	const int K = 4;
	int a[M][K]{};

	cout << "Введите элементы матрицы: " << endl;
	for (int i = 0; i < M; i++)
	{
		for (int j = 0; j < K; j++)
		{
			cin >> a[i][j];
		}
	}
	cout << endl;
	cout << "Матрица имеет вид: " << endl;
	for (int i = 0; i < M; i++)
	{
		for (int j = 0; j < K; j++)
		{
			cout << setw(2) << a[i][j] << " ";
		}
		cout << endl;
	}
	cout << "Сумма элементов каждого столбца: " << endl;
	int sum = 0;
	for (int j = 0; j < K; j++)
	{
		for (int i = 0; i < M; i++)
		{
			sum += a[i][j];
		}
		a[M + 1][j] = sum;
		sum = 0;
		cout << "\t - столбец " << j + 1 << ": " << sum << endl;
	}
	int max = a[M + 1][1];
	int k;
	for (int j = 0; j < K; j++)
	{
		if (a[M + 1][j] > sum)
		{
			k = j;
		}
	}
	cout << "Номер столбца с максимальной суммой элементов: "  << k;
	system("pause");
	return 0;
}
