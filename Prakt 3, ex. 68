#include <iostream>
#include <Windows.h>
#include <time.h>
using namespace std;

int main()
{
	SetConsoleCP(1251);
	SetConsoleOutputCP(1251);

	const int n = 12;
	int a[n]{};

	srand(time(0));
	for (int i = 0; i < n; i++)
	{
		a[i] = 1 + rand() % 3;
	}

	cout << "Массив имеет вид: " << endl;
	for (int i = 0; i < n; i++)
	{
		cout << a[i] << " ";
	}
	cout << endl;
	cout << "Индекс максимального элемента: " << endl;
	int max_i = 0;
	for (int i = 0; i < n - 1; i++)
	{
		int max = a[0];
		if (a[i] > max)
		{
			max_i = i;
		}
	}
	cout << max_i;

	cout << endl << "Произведение элементов массива: " << endl;
	double p = 1;
	for (int i = 0; i < n; i++)
	{
		p *= a[i];
	}
	cout << p;
	cout << endl;

	system("pause");
	return 0;
}
