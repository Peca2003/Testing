#include <iostream>
#include <math.h>
#include <Windows.h>
#include <iomanip>

using namespace std;

int main()
{
	SetConsoleCP(1251);
	SetConsoleOutputCP(1251);
	int arr[10] = {2, 3, 45, 34, 65, 44, 12, 7, 56, 453}; int n;
	cout << "Введите значение n: "; cin >> n;

	for (int i = 0; i < 10; i++)
	{
		cout << arr[i] << setw(4);
	}
	cout << endl << endl;
	cout << "Элементы больше числа n: " << endl;
	for (int i = 0; i < 10; i++)
	{
		if (arr[i] > n)
		{
			cout << arr[i] << setw(4);
		}
	}
	
	cout << endl << endl;
	cout << "Индексы элементов больших числа n: " << endl;
	for (int i = 0; i < 10; i++)
	{
		if (arr[i] > n)
		{
			cout << i << setw(4);
		}
	}
	cout << endl << endl;

	system("pause");

	return 0;
}
