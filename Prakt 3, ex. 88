#include <iostream>
#include <Windows.h>
#include <iomanip>
using namespace std;

int main()
{
	SetConsoleCP(1251);
	SetConsoleOutputCP(1251);

	const int n = 8;
	cout << "Матрица имеет вид: " << endl;
	int a[n][n] = {
		{ 12, 54, -4, 12, 5, 6, -1, 8 },
		{ 9, -1, 33, 12, -11, 4, 5, 6 },
		{ 1, 0, -5, 9, 15, 12, -3, 24 },
		{ -7, 14, 4, 8, 34, 76, 43, 5 },
		{ 0, -7, 6, 77, 91, 43, 11, 6 },
		{ 3, 65, 34, 76, -1, 44, 3, 7 },
		{ 6, -4, -12, 34, 4, 55, 2, 1 },
		{ 87, 55, -43, 12, 2, 6, 9, 2 }
	};
	int c[n]{};
	for (int i = 0; i < n; i++)
	{
		for (int j = 0; j < n; j++)
		{
			cout << a[i][j] << " ";
		}
		cout << endl;
	}
	int k = 0, sum = 0;

	cout << endl;
	cout << "Сумма элементов в строках, где есть отрицательный элемент: " << endl;
	for (int i = 0; i < n; i++)
	{
		for (int j = 0; j < n; j++)
		{
			if (a[i][j] < 0)
			{
				k++;
			}
			sum += a[i][j];
		}
		if (k > 0)
		{

			cout << "Строка " << i + 1 << ": " << sum << endl;	
		}	
	}
	for (int j = 0; j < n; j++)
	{
		c[j] = 0;
		for (int i = 0; i < n; i++)
		{
			if (a[i][j] < 0 && a[i][j] % 2 != 0)
			{
				c[j] -= a[i][j];
			}
		}
	}
	cout << endl << "Матрица c: " << endl;
	for (int j = 0; j < n; j++)
	{
		cout << setw(2) << c[j] << " ";
	}
	cout << endl;
	for (int j = 1; j < n; j++)
	{
		for (int g = 0; g < n - j; g++)
		{
			if (c[g] > c[g + 1])
			{
				swap(c[g], c[g + 1]);
				for (int i = 0; i < n; i++)
				{
					swap(a[i][g], a[i][g + 1]);
				}
			}
		}
	}
	cout << endl << "Отсортированная матрица: " << endl;
	for (int i = 0; i < n; ++i)
	{
		for (int j = 0; j < n; j++)
		{
			cout << setw(2) << a[i][j] << " ";
		}
		cout << endl;
	}

	cout << endl << "Сумма элементов в столбцах, где есть отрицательный элемент: " << endl;
	for (int j = 0; j < n; j++)
	{
		k = 0; sum = 0;
		for (int i = 0; i < n; i++)
		{
			if (a[i][j] < 0)
			{
				k++;
			}
			sum += a[i][j];
		}
		if (k != 0)
		{
			cout << "Столбец " << j + 1 << ": " << sum << endl;
		}
	}
	system("pause");
	return 0;
}
