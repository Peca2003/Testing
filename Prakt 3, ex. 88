#include <iostream>
#include <Windows.h>
#include <iomanip>
using namespace std;

int main()
{
	SetConsoleCP(1251);
	SetConsoleOutputCP(1251);

	const int n = 8;
	int a[n][n]{}; int c[n]{};
	int k = 0, sum = 0;
	cout << "Введите матрицу: " << endl;
	for (int i = 0; i < n; i++)
	{
		for (int j = 0; j < n; j++)
		{
			cin >> a[i][j];
		}
	}

	cout << "Искомые номера для k-ых строк(столбцов) : ";
	for (int i = 0; i < n; i++)
	{
		for (int j = 0; j < n; j++)
		{
			if (a[i][j] = a[j][i])
			{
				k++;
			}
		}
		if (k == n)
		{
			cout << i + 1 << " ";
		}
	}
	cout << endl;
	cout << "Сумма элементов в строках, где есть отрицательный элемент: " << endl;
	for (int i = 0; i < n; i++)
	{
		for (int j = 0; j < n; j++)
		{
			if (a[i][j] < 0)
			{
				k++;
			}
		}
		if (k > 0)
		{
			for (int j = 0; j < n; j++)
			{
				sum += a[i][j];
			}
			cout << "Строка " << i + 1 << ": " << sum << endl;
		}
	}
	for (int j = 0; j < n; j++)
	{
		c[j] = 0;
		for (int i = 0; i < n; i++)
		{
			if (a[i][j] < 0 && a[i][j] % 2 != 0)
			{
				c[j] -= a[i][j];
			}
		}
	}
	cout << "Матрица c: " << endl;
	for (int j = 0; j < n; j++)
	{
		cout << setw(2) << c[j] << " ";
	}
	cout << endl;
	for (int j = 1; j < n; j++)
	{
		for (int g = 0; g < n - j; g++)
		{
			if (c[g] > c[g + 1])
			{
				swap(c[g], c[g + 1]);
				for (int i = 0; i < n; i++)
				{
					swap(a[i][g], a[i][g + 1]);
				}
			}
		}
	}
	cout << "Отсортированная матрица: " << endl;
	for (int i = 0; i < n; ++i)
	{
		for (int j = 0; j < n; j++)
		{
			cout << setw(2) << a[i][j] << " ";
		}
		cout << endl;
	}

	cout << "Сумма элементов в столбцах, где есть отрицательный элемент: " << endl;
	for (int j = 0; j < n; j++)
	{
		k = 0; sum = 0;
		for (int i = 0; i < n; i++)
		{
			if (a[i][j] < 0)
			{
				k++;
			}
			sum += a[i][j];
		}
		if (k != 0)
		{
			cout << "Столбец " << j + 1 << ": " << sum << endl;
		}
	}
	system("pause");
	return 0;
}
